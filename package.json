{
  "name": "jpd",
  "version": "4.0.0",
  "description": "The personal website of Jared Pendergraft",
  "scripts": {
    "watch:sass": "sass --no-source-map --watch src/_scss:dist/css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/_scss:dist/css",
    "build:eleventy": "eleventy",
    "postbuild": "postcss dist/css/*.css -u autoprefixer cssnano -r --no-map",
    "dev": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass build:eleventy"
  },
  "author": "Jared Pendergraft <jaredpdesigns@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "autoprefixer": "^10.4.4",
    "cssnano": "^5.1.7",
    "html-minifier": "^4.0.0",
    "markdown-it-anchor": "^8.6.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "precss": "^4.0.0",
    "sass": "^1.50.0",
    "terser": "^5.12.1"
  }
}
