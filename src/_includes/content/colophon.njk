<section class="oomph__v--m">
  <h4>Colors</h4>
  {% set colors = ["base", "base--ish", "base--mid", "base--semi", "base--light", "base--ghost", "highlight", "highlight--ish", "highlight--mid", "highlight--semi", "highlight--light", "highlight--ghost", "contrast", "contrast--extra"] %}
  <section class="flow__grid flow__align--v-start flow__grid--columns-auto">
    {% for color in colors %}
      <span class="flow__grid flow__align--h-start flow__align--v-center flow__direction--column flow__gap--xs">
        <span class="border__all color__border--base--light color__bg--{{ color}} flow__inline flow__size--h-xl flow__size--w-xl margin__right--xs radius__all"></span>
        <code>{{ color }}</code>
      </span>
    {% endfor %}
  </section>
</section>
